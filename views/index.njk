{% extends "base.njk" %}
{% block main %}
    <div class="contentent">
        <h1 id="partyTime">Party Time</h1>
        <h3 id="clip-path1">
            Buy any 2 burgers and
            <br>get 1.5L Pepsi Free</h3>
            <button id="order-button">Order Now</button>
        </div>
    </section>
    {% if recentBought.length > 0 %}
        <h2 id="WTEat">Your Recent Bought Products</h2>
        <section id="recentBought">
            {% for item in recentBought %}
                <div class="order">
                    <a href="/detail/{{ meals[item - 1].id }}">
                        <img src="projectImages/{{ meals[item - 1].image }}" alt="Meal 1" width="100%">
                            <p>&#11088 {{ meals[item - 1].rating }}</p>
                            <h5 style="color: black; font-size: 20px">
                                <strong>{{ meals[item - 1].title }}</strong>
                            </h5>
                            {% set shortDiscription = "joe" %}
                            <p>{{ meals[item - 1].description.substr(0, 100) }}...</p>
                        </a>
                        <p>
                            <a
                                type="submit"
                                class="btn addToCartButton"
                                href="/sales/cart?id={{ meals[item - 1].id }}&back=/detail/{{ meals[item - 1].id }}">add to cart</a>
                            {{ meals[item].price }} SAR</p>
                    </div>
                {% endfor %}
            </section>
        {% endif %}
