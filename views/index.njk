                                {% endif %}
                                <h5 style="color: black; font-size: 20px">
                                    <strong>{{ meal.title }}</strong>
                                </h5>
                                <p>{{ meal.description.substr(0, 100) }}...</p>
                            </a>
                            <p>
                                <a type="submit" class="btn addToCartButton" href="/sales/cart?id={{ meal.id }}&back=/detail/{{ meal.id }}">add to cart</a>
                                {{ meal.price }} SAR</p>
